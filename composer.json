{
    "name": "edcas/ptpayment",
    "type": "library",
    "description": "Librería en PHP que permita conectarse con el webservice de PSE para realizar un proceso de pago básico",
    "keywords": [
        "edcas",
        "placetopayment",
        "placetopay",
        "payment",
        "ptpayment"
    ],
    "homepage": "https://github.com/edcas/ptpayment",
    "license": "MIT",
    "authors": [
        {
            "name": "Eduard Castro",
            "email": "eduard.cas07@gmail.com"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "symfony/yaml": "^3.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.12",
        "phpunit/phpunit": "~4.0||~5.0"
    },
    "autoload": {
        "psr-4": {
            "edcas\\ptpayment\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "edcas\\ptpayment\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
